{
    "name": "@anolilab/zod-prisma",
    "version": "0.0.0",
    "private": true,
    "description": "Helpful packages to work with prisma and zod.",
    "repository": "anolilab/zod-prisma",
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de",
        "url": "https://github.com/prisis"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "preconstruct build",
        "build:dev": "preconstruct dev",
        "create:package": "plop",
        "preinstall": "node verify-node-version.cjs",
        "postinstall": "husky install && preconstruct dev",
        "prettier": "prettier --config=.prettierrc.cjs --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
        "lint:staged": "lint-staged",
        "lint:text": "textlint ./.github/ISSUE_TEMPLATE/** ./packages/** ./README.md ./UPGRADE.md --parallel --experimental --dry-run",
        "sort-package-json": "sort-package-json packages/**/package.json",
        "fix:lint:text": "textlint ./.github/ISSUE_TEMPLATE/** ./packages/** ./README.md ./UPGRADE.md --parallel --experimental --fix",
        "fix:build": "preconstruct fix",
        "fix:lint": "pnpm run lint --fix",
        "lint": "cross-env NO_LOGS=true eslint -c ./.eslintrc.cjs --ext .js,.ts,.tsx ./packages",
        "test": "jest --verbose",
        "test:build": "TEST_BUILD=true jest --verbose --coverage=false",
        "test:watch": "jest --watch --verbose=false --coverage=false",
        "snapupdate": "jest --updateSnapshot"
    },
    "browserslist": [
        "extends browserslist-config-anolilab"
    ],
    "dependencies": {
        "@anolilab/babel-preset": "^3.2.0",
        "@anolilab/eslint-config": "^2.2.0",
        "@anolilab/prettier-config": "^2.0.4",
        "@anolilab/semantic-release-preset": "^1.2.0",
        "@anolilab/textlint-config": "^3.0.0",
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.16.5",
        "@babel/plugin-syntax-jsx": "^7.16.5",
        "@babel/preset-react": "^7.16.5",
        "@babel/preset-typescript": "^7.16.5",
        "@babel/runtime": "^7.16.5",
        "@manypkg/cli": "^0.19.1",
        "@preconstruct/cli": "^2.1.5",
        "@qiwi/multi-semantic-release": "^3.17.0",
        "@testing-library/jest-dom": "^5.16.1",
        "@types/jest": "^27.0.3",
        "@types/jest-axe": "^3.5.3",
        "@types/node": "^17.0.4",
        "@typescript-eslint/eslint-plugin": "^5.8.0",
        "@typescript-eslint/parser": "^5.8.0",
        "@babel/eslint-parser": "^7.16.5",
        "babel-loader": "^8.2.3",
        "browserslist-config-anolilab": "^2.3.0",
        "commitizen": "^4.2.4",
        "cross-env": "^7.0.3",
        "diffable-html": "^5.0.0",
        "eslint": "^7.32.0",
        "eslint-plugin-jest": "^26.0.0",
        "eslint-plugin-node": "^11.1.0",
        "husky": "^7.0.4",
        "babel-jest": "^27.4.5",
        "jest": "^27.4.5",
        "jest-axe": "^5.0.1",
        "jest-circus": "^27.4.5",
        "jest-diff": "^27.4.2",
        "jest-extended": "^1.2.0",
        "jest-junit": "^13.0.0",
        "jest-mock": "^27.4.2",
        "jest-watch-typeahead": "^1.0.0",
        "lint-staged": "^12.1.3",
        "plop": "^3.0.5",
        "prettier": "^2.5.1",
        "semantic-release": "^19.0.0",
        "snapshot-diff": "^0.9.0",
        "sort-package-json": "^1.53.1",
        "ts-jest": "^27.1.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4",
        "textlint": "12.1.0"
    },
    "engines": {
        "node": ">=14"
    },
    "modulePathIgnorePatterns": [
        "./package.json"
    ],
    "preconstruct": {
        "packages": [
            "packages/*",
            "packages/@*/*"
        ],
        "globals": {}
    }
}
